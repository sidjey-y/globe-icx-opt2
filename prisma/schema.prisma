generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Answer {
  id            String   @id @default(cuid())
  seed          String
  questionIndex Int
  questionText  String
  answerText    String
  userEmail     String   // Globe email (e.g. carla.haboc@globe.com.ph)
  createdAt     DateTime @default(now())

  @@index([createdAt])
  @@index([questionIndex])
  @@index([userEmail])
}


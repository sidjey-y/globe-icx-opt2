      </a>
    </div>


  </div>

  <button class="carousel-btn prev" type="button" onclick="moveSlideExp(-1)">‹</button>
  <button class="carousel-btn next" type="button" onclick="moveSlideExp(1)">›</button>
</div>

<div class="carousel-dots" id="carouselDotsExp"></div>

<script>
  let indexExp = 0;

  function buildDotsExp() {
    const track = document.getElementById("carouselTrackExp");
    const dots = document.getElementById("carouselDotsExp");
    dots.innerHTML = "";

    const total = track.children.length;

    for (let i = 0; i < total; i++) {
      const dot = document.createElement("div");
      dot.className = "carousel-dot" + (i === 0 ? " active" : "");
      dot.onclick = () => goToSlideExp(i);
      dots.appendChild(dot);
    }
  }

  function updateDotsExp() {
    const dots = document.querySelectorAll("#carouselDotsExp .carousel-dot");
    dots.forEach((d, i) => d.classList.toggle("active", i === indexExp));
  }

  function moveSlideExp(direction) {
    const track = document.getElementById("carouselTrackExp");
    const total = track.children.length;

    indexExp = (indexExp + direction + total) % total;
    track.style.transform = `translateX(-${indexExp * 100}%)`;
    updateDotsExp();
  }

  function goToSlideExp(i) {
    const track = document.getElementById("carouselTrackExp");
    indexExp = i;
    track.style.transform = `translateX(-${indexExp * 100}%)`;
    updateDotsExp();
  }

  function hideControlsIfSingleSlide() {
    const track = document.getElementById("carouselTrackExp");
    const total = track.children.length;

    if (total <= 1) {
      document.querySelectorAll("#carouselWrapExp .carousel-btn")
        .forEach(btn => btn.style.display = "none");

      document.getElementById("carouselDotsExp").style.display = "none";
    }
  }

  buildDotsExp();
  hideControlsIfSingleSlide();
</script>
